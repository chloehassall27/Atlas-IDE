<Window x:Class="AtlasIDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skeleton_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="FieldTemplate" TargetType="ContentControl">
            <Border Background="LightGray" >
                <DockPanel >
                    <TextBlock DockPanel.Dock="Left" Text="{TemplateBinding Content}" />
                </DockPanel>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <StackPanel>
        <TabControl HorizontalAlignment="Left" Height="409" Margin="-2,-2,-2,0" VerticalAlignment="Top" Width="772">
            <TabItem Header="Things">
                <StackPanel Background="#FFE5E5E5">
                    <ListBox Name="thingList" HorizontalAlignment="Left" VerticalAlignment="Top" Height="380" Width="766">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical"  
                                    VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                        FontSize="16"></TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Model: " 
                                            FontSize="16"></TextBlock>
                                        <TextBlock Text="{Binding Model}" 
                                            FontSize="16"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Services">
                <StackPanel Background="#FFE5E5E5">
                    <ListBox Name="serviceList" HorizontalAlignment="Left" VerticalAlignment="Top" Height="380" Width="766">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical"  
                                    VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                        FontSize="16"></TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Belongs to: " 
                                            FontSize="16"></TextBlock>
                                        <TextBlock Text="{Binding EntityID}" 
                                            FontSize="16"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Relationships">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="679*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Apps">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="679*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Recipes">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="679*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
